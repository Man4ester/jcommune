<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
  <class name="org.jtalks.jcommune.model.entity.PostDraft" table="POST_DRAFT">
    <cache usage="read-write"/>
    <id column="ID" name="id" unsaved-value="0">
       <generator class="native"/>
    </id>
    <property name="uuid" column="UUID" not-null="true"/>
    <property name="content" column="CONTENT" not-null="true"/>
    <property name="modificationDate" column="MODIFICATION_DATE"
              type="org.joda.time.contrib.hibernate.PersistentDateTime"
              not-null="true"/>
    <properties name="userPostDraftConstraint" unique="true">
      <many-to-one name="author" column="USER_ID" class="org.jtalks.jcommune.model.entity.JCUser"
                     not-null="true" foreign-key="FK_VOTED_USER"/>
      <many-to-one name="topic" column="TOPIC_ID" not-null="false"/>
    </properties>
  </class>
  <query name="getByAuthorAndTopic">
        <![CDATA[FROM PostDraft as draft
             WHERE draft.author = :author AND draft.topic = :topic]]>
   </query>
</hibernate-mapping>